{
  "plansDirectory": "./plans",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/plans-bank-sync.sh session-start"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/plans-bank-sync.sh stop"
          }
        ]
      }
    ]
  }
}
