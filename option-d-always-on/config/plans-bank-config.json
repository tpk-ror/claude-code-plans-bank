{
  "alwaysOn": true,
  "targetDirectory": "./docs/plans",
  "autoCommit": true,
  "categories": {
    "bugfix": ["bug", "fix", "issue", "error", "patch"],
    "refactor": ["refactor", "cleanup", "reorganize", "restructure"],
    "docs": ["documentation", "readme", "guide", "doc"],
    "test": ["test", "spec", "coverage"]
  },
  "autoArchive": {
    "enabled": true,
    "olderThanDays": 30,
    "archiveDirectory": "./docs/plans/archive"
  }
}
